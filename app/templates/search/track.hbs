<aside class="sidebar {{if (not this.showModal) "sidebar--hidden"}}">
  <div class="sidebar_header">
    <h1>{{t "track"}}</h1>
    <button
      class="mini ui button sidebar_close_button"
      {{on "click" (fn (mut this.showModal) false)}}
    >
      X
    </button>
  </div>

  <article class="ui card">
    <div class="image">
      <img src={{this.model.album.imgMd}}>
    </div>
    <div class="content">
      <span class="header">{{this.model.album.name}}</span>
      <div class="meta">
        <span class="date">{{this.model.album.releaseDate}}</span>
      </div>
      <div class="description">
        <p>{{this.model.name}}</p>
        <p>{{ms-to-minutes this.model.durationMs}}</p>
      </div>
    </div>
  </article>
</aside>

